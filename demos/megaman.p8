pico-8 cartridge // http://www.pico-8.com
version 22
__lua__
-- megaman running sprite
-- written by Adam Richardson

function _init()
	idx = 0
	mag = 1
	last_anim = 0
	left = false
	cx = 0
	x = 52
end

function anim()
	if(last_anim+0.15 < t()) then
		last_anim = t()
		idx += 3*mag
		if idx > 6 then
			idx = 3
			mag *= -1
		end
		if idx < 0 then
			idx = 3
			mag *= -1
		end
	end
end

function _update()
	if btn(1) or btn(0) then
		if btn(1) then
			left = false
			cx += 1
			x += 1
		else
			if cx > 0 then
				left = true
				cx -= 1
				x -= 1
			end
		end
		camera(cx,0)
		anim()
	else
		idx = 9
	end
end

function _draw()
	cls(5)
	map(0,0,0,57)
	spr(idx, x, 65, 3, 3, left)
end

