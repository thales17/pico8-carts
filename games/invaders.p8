pico-8 cartridge // http://www.pico-8.com
version 27
__lua__
-- INVADERS
-- BY ADAM RICHARDSON
player={x=0,y=120,w=11,h=8}
score=0
lives=0
ufo={x=-20,y=10,w=16,h=8}
function _init()
	cls()
	-- ufo
	spr(32,ufo.x,ufo.y,2,1)
	
	-- enemies
	for i=1,8 do
		spr(4,i*16,20)
		spr(0,i*16,30,2,1)
		spr(0,i*16,40,2,1)
		spr(6,i*16,50,2,1)
		spr(6,i*16,60,2,1)
	end
	-- player
	spr(10,player.x,player.y,2,1)
end

function _update60()
	if btn(0) then
		rectfill(
			player.x,
			player.y,
			player.x+player.w,
			player.y+player.h,0)
		player.x-=1
		player.x=max(0,player.x)
		spr(10,player.x,player.y,2,1)
	end
	
	if btn(1) then
		rectfill(
			player.x,
			player.y,
			player.x+player.w,
			player.y+player.h,0)
		player.x+=1
		player.x=min(128-player.w,player.x)
		spr(10,player.x,player.y,2,1)
	end
	
	rectfill(
		ufo.x,
		ufo.y,
		ufo.x+ufo.w,
		ufo.y+ufo.h,0)
	ufo.x+=1
	spr(32,ufo.x,ufo.y,2,1)
	if ufo.x>128 then
		ufo.x=-20
	end
end

function _draw()
	rectfill(0,0,128,10,0)
	-- info
	print("score "..score,45,2)
	spr(10,104,0,2,1)
	print("="..lives,116,2,7)
		
	-- stats
	print(stat(1),0,2,7)
end

