function _update60()
	if btn(1) or btn(0) then
		if btn(1) then
			left = false
			cx += 1
			x += 1
		else
			if cx > 0 then
				left = true
				cx -= 1
				x -= 1
			end
		end
--		camera(cx,0)
		anim()
	else
		idx = 1
	end
end

function _draw()
	cls(3)
	spr(idx,65,65,1,1,false,true)
end
