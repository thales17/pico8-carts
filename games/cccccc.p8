-- p8 functions
function _init()
	level_start()
end

function _update60()
	if btn(⬅️) or btn(➡️) then
		if btn(➡️) then
			move_lr(speed)
		else
			move_lr(speed*-1)
		end
		anim()
	else
		player.sidx=1
	end
	
	if btnp(❎) and not player.flipping then
		grav_mag*=-1
		player.resting=false
		player.should_flip=true
		player.flipping=true
	end
	
	fall()
	handle_flip()
	if collide(player,exit) then
		printh("you did it")
		level+=1
		level_start()
	end
end

function _draw()
	bg_t+=1
	if bg_t==bg_ticks then
		bg_t=0
		star_bg()
		move_player(player.x,player.y)
		map(level*16,0,0,0)
	end
end
