-- fire
function init_fire()
	fw=64
	fh=12
	psize=3
	pixels={}
	for x=0,fw do
		for y=0,fh do
			pixels[idx_xy(x,y)]=0
		end
	end
	
	for x=0,fw-1 do
		pixels[idx_xy(x,fh-1)]=psize
	end
	
--	colors={
--		0,
--		1,
--		8,
--		9,
--		10,
--		15,
--		7,
--		6,
--		13,
--		12}
	colors={
		0,
		8,
		10}
end

function idx_xy(x,y)
	return y*fw+x+1
end

function update_fire()
	for i=0,(fw)*(fh-1) do
		local src=i+fw
		local p=pixels[src]
		if(p==0) then
			pixels[src-fw]=0
		else
			local r=band(flr(rnd(3)),3)
			local dst=src-r+1
			pixels[dst-fw]=p-band(r,1)  
		end
	end
end

function fire_bg()
	if pixels==nil then
		init_fire()
	end
	update_fire()
	local offset=128-fh
	for x=0,fw-1 do
		for y=0,fh-1 do
			for z=0,1 do
				pset(x+(z*63),y+offset,colors[pixels[idx_xy(x,y)]])
			end
		end
	end
end
