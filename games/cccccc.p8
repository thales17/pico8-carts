sw=1

function anim()
	if(last_anim+0.15 < t()) then
		last_anim = t()
		idx += sw*mag
		if idx > sw*2 then
			idx = sw
			mag *= -1
		end
		if idx < 0 then
			idx = sw
			mag *= -1
		end
	end
end
